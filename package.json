{
    "name": "biblink-frontend",
    "version": "1.1.3-alpha",
    "license": "MIT",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "ngsw-config": "node_modules/.bin/ngsw-config dist src/ngsw-config.json",
        "ngsw-copy": "cp node_modules/@angular/service-worker/ngsw-worker.js dist/",
        "deploy": "npm run build:all && firebase deploy --only hosting && npm run compodoc && surge -p ./documentation -d biblink-documentation.surge.sh",
        "build": "ng build",
        "build:prod": "ng build --prod --build-optimizer --vendor-chunk=true",
        "test": "ng test --watch false",
        "release": "standard-version",
        "lint": "ng lint",
        "webpack:prerender": "webpack --config webpack.prerender.config.js",
        "build:prerender": "node dist/biblink/prerender.js",
        "serve:prerender": "http-server dist/biblink -o",
        "build:all": "npm run build:prod && ng run biblink:server && npm run webpack:prerender && npm run build:prerender",
        "e2e": "ng e2e",
        "compodoc": "./node_modules/.bin/compodoc -p src/tsconfig.app.json",
        "compodoc-serve": "./node_modules/.bin/compodoc -p src/tsconfig.app.json -w -s"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "6.0.3",
        "@angular/common": "6.0.3",
        "@angular/compiler": "6.0.3",
        "@angular/core": "6.0.3",
        "@angular/forms": "6.0.3",
        "@angular/http": "6.0.3",
        "@angular/platform-browser": "6.0.3",
        "@angular/platform-browser-dynamic": "6.0.3",
        "@angular/platform-server": "6.0.3",
        "@angular/pwa": "^0.6.8",
        "@angular/router": "6.0.3",
        "@angular/service-worker": "6.0.3",
        "@fortawesome/fontawesome-svg-core": "^1.2.0-11",
        "@fortawesome/free-brands-svg-icons": "^5.1.0-8",
        "@fortawesome/free-solid-svg-icons": "^5.1.0-8",
        "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
        "@ngx-share/core": "^5.3.1",
        "@nicky-lenaers/ngx-scroll-to": "^0.5.0",
        "angularfire2": "5.0.0-rc.9",
        "angulartics2": "^6.1.0",
        "bulma-extensions": "^1.1.0",
        "core-js": "^2.4.1",
        "firebase": "^5.0.4",
        "jquery": "^3.3.1",
        "ng-recaptcha": "^3.0.3",
        "ngx-clipboard": "^9.1.2",
        "ngx-toastr": "^8.1.1",
        "node-sass": "^4.9.0",
        "rxjs": "^6.2.0",
        "rxjs-compat": "^6.2.0",
        "web-animations-js": "^2.3.1",
        "zone.js": "^0.8.26"
    },
    "devDependencies": {
        "@angular-devkit/build-angular": "~0.6.0",
        "@angular/cli": "6.0.7",
        "@angular/compiler-cli": "6.0.3",
        "@angular/language-service": "6.0.3",
        "@compodoc/compodoc": "^1.1.3",
        "@types/jasmine": "~2.5.53",
        "@types/jasminewd2": "~2.0.2",
        "codelyzer": "~3.2.0",
        "concat": "^1.0.3",
        "fs-extra": "^6.0.1",
        "http-server": "^0.11.1",
        "jasmine-core": "~2.6.2",
        "jasmine-spec-reporter": "~4.1.0",
        "karma": "~1.7.0",
        "karma-chrome-launcher": "~2.1.1",
        "karma-cli": "~1.0.1",
        "karma-coverage-istanbul-reporter": "^1.2.1",
        "karma-jasmine": "~1.1.0",
        "karma-jasmine-html-reporter": "^0.2.2",
        "path": "^0.12.7",
        "protractor": "^5.3.2",
        "standard-version": "^4.4.0",
        "surge": "^0.20.1",
        "ts-loader": "^4.4.1",
        "ts-node": "~3.2.0",
        "tslint": "~5.7.0",
        "typescript": "2.7.2",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.8",
        "ws": "^5.2.0",
        "xmlhttprequest": "^1.8.0"
    }
}